<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <header>
        <button id="repeat">Repeat</button>

        <p class="directive">Click "check" box to guess my number</p>

    </header>

<div class="guessprompt">
    <h1 data-test-id="gameprompt">Guess My Number!</h1>
    
    <div id="unknown">X</div>

</div>

<main>
    <div data-test-id="GuessArea" id="guessSection">
        
        <div id="numcheck">

        <div>
            <input min="1" type="number" name="" id="numbox" data-test-id="numberbox"> 
        <button id="check">Check!</button>

        </div>
        </div>
    
        <div id="display">
         <p id="notifier" data-test-id="gamealert">Start Guessing......</p>
         <p id="score" data-test-id="currentscore">Score: <span id="scoreValue">20</span></p> 
         <p id="scoreupdate" data-test-id="newscore">HighScore: <span id="highScore"></span></p> 


        </div>
    
    
    </div>
</main>
</body>

<script src="app.js"></script>
</html>